{
  "name": "copilot-profiles",
  "displayName": "Copilot Profiles",
  "description": "Manage and switch Copilot instructions easily using profiles.",
  "version": "0.1.0",
  "publisher": "alycse",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:copilotProfilesView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-profiles-sidebar",
          "title": "Copilot Profiles",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "copilot-profiles-sidebar": [
        {
          "id": "copilot-profiles-view",
          "name": "",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.102.0"
  }
}
