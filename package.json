{
  "name": "copilot-profiles",
  "displayName": "Modular Copilot Profiles",
  "icon": "media/logo.png",
  "description": "Easily manage and switch GitHub Copilot instructions using modular profiles.",
  "version": "0.2.3",
  "publisher": "alycse",
  "engines": {
    "vscode": "^1.102.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "AI",
    "Machine Learning",
    "Chat",
    "Data Science",
    "Other"
  ],
  "activationEvents": [
    "onView:copilotProfilesView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-profiles-sidebar",
          "title": "Modular Copilot Profiles",
          "icon": "media/icon.png"
